<div id="<%= dom_id friend %>">


<div class="px-5 pt-5">
  <div class="jumbotron">
  <h1 class="display-4">
    <%= friend.first_name %>
    <%= friend.last_name %>
  </h1>
  <p class="lead">
    <%= friend.email %> |
    <%= friend.phone %> |
    <%= friend.twitter %>
  </p>
  
  
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:" btn btn-primary m-1" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-primary m-1" %>

</div>
</div>

  

</div>
