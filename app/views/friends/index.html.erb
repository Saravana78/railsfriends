<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>

<div class="px-5">

<% if user_signed_in? %>

  <h1 class="py-3">Friends List</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered border-dark">
  <thead class="thead-dark">
    <tr>
      <th>S.NO</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User_ID</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each_with_index do |friend, index| %>
      
      <% if friend.user == current_user %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td>
          <%= link_to "Show", friend, class: "btn btn-info btn-sm m-1" %>

          <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-primary btn-sm m-1" %>
          <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm m-1" %>
          
          </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
</div>


<%= link_to "New Friend", new_friend_path, class: "btn btn-success mx-5 mt-3 mb-5" %>

<% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage...

<% end %>